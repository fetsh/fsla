<!DOCTYPE html>
<html>
<head>
  <title>: <%= @title %> :</title>
  <%= javascript_include_tag :defaults %>
  <%= yield :js %>
  <%= render 'layouts/stylesheets' %>
  <%= csrf_meta_tag %>
</head>
<body>

    <div class="container">
      <%= render 'layouts/header' %>
      <section class='round'>
        <% flash.each do |key, value| %>
          <%= content_tag(:div, value, :class => "flash #{key}") %>
        <% end %>
        <%= yield %>
      </section>
      <%= render 'layouts/footer' %>
      <%= debug(params) if Rails.env.development? %>
    </div>

</body>
</html>
